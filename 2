import androidx.appcompat.app.AppCompatActivity;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;
import android.widget.Toast;
public class MainActivity extends AppCompatActivity {
Button btnadd, btnsub, btnmul, btndiv;
EditText number1, number2, result;
//TextView ;
@Override
protected void onCreate(Bundle savedInstanceState) {
super.onCreate(savedInstanceState);
setContentView(R.layout.activity_main);
number1 = findViewById(R.id.number1);
number2 = findViewById(R.id.number2);
btnadd = findViewById(R.id.btnadd);
btnsub = findViewById(R.id.btnsub);
btnmul = findViewById(R.id.btnmul);
btndiv = findViewById(R.id.btndiv);
result = findViewById(R.id.result);
btnadd.setOnClickListener(new View.OnClickListener() {
@Override
public void onClick(View view) {
int op1, op2,res;
op1 = Integer.parseInt(number1.getText().toString());
op2 = Integer.parseInt(number2.getText().toString());
res= op1+op2;
result.setText(""+res);
}
});
btnsub.setOnClickListener(new View.OnClickListener() {
@Override
public void onClick(View view) {
int op1, op2,res;
op1 = Integer.parseInt(number1.getText().toString());
op2 = Integer.parseInt(number2.getText().toString());
res = op1-op2;
result.setText(""+res);
}
});
btnmul.setOnClickListener(new View.OnClickListener() {
@Override
public void onClick(View view) {
int op1, op2,res;
op1 = Integer.parseInt(number1.getText().toString());
op2 = Integer.parseInt(number2.getText().toString());
res = op1*op2;
result.setText(""+res);
}
});
btndiv.setOnClickListener(new View.OnClickListener() {
@Override
public void onClick(View view) {
int op1, op2;
op1 = Integer.parseInt(number1.getText().toString());
op2 = Integer.parseInt(number2.getText().toString());
if(op2==0)
{
Toast.makeText(getApplicationContext(), "you cannot divide by 0", 
Toast.LENGTH_SHORT).show();
//Toast.makeText(MainActivity.this, "", Toast.LENGTH_SHORT).show();
result.setText("Indefenate Value");
}
else {
int res = op1/op2;
result.setText(""+res);
}
}
});
}
}
